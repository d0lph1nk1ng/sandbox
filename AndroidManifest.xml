<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dk.sandbox"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.dk.sandbox.ExampleListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.dk.sandbox.ExampleDetailActivity"
            android:label="@string/title_example_detail"
            android:parentActivityName=".ExampleListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ExampleListActivity" />
        </activity>
        <activity
            android:name="com.example.dk.sandbox.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.dk.sandbox.ScrollviewFragment"
            android:label="@string/title_activity_scrollview"
            android:parentActivityName="MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name="com.example.dk.sandbox.DragDropFragment"
            android:label="@string/title_activity_drag_drop"
            android:parentActivityName="MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name="com.example.dk.sandbox.AnimationFragment"
            android:label="@string/title_activity_animation"
            android:parentActivityName="MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name="com.example.dk.sandbox.CanvasFragment"
            android:label="@string/title_activity_canvas"
            android:parentActivityName="MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
    </application>

</manifest>